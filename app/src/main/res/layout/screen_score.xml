<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7">


    <ImageView
        app:tint="@color/white"
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/pedometr"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/btnInfo"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/btnInfo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        app:tint="@color/white"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_info_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/btnInfo">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="@string/txtSon"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="4dp"
                        app:cardMaxElevation="14dp"
                        app:cardPreventCornerOverlap="true">


                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_gravity="center"
                            android:id="@+id/image_logo"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="8dp"
                            android:padding="1dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.358"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="walking.json"
                            app:lottie_loop="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:id="@id/txt5"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="12dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>






                    </androidx.cardview.widget.CardView>



                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="@string/txtQ"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="4dp"
                        app:cardMaxElevation="14dp"
                        app:cardPreventCornerOverlap="true">


                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_gravity="center"
                            android:id="@+id/image_logo2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="8dp"
                            android:padding="1dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.358"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="distance.json"
                            app:lottie_loop="true" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10.9"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="12dp"
                            android:id="@+id/txt1"/>






                    </androidx.cardview.widget.CardView>



                </LinearLayout>




            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:text="@string/txtCal"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:cardCornerRadius="22dp"
                            app:cardElevation="4dp"
                            app:cardMaxElevation="14dp"
                            app:cardPreventCornerOverlap="true">


                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_gravity="center"
                                android:id="@+id/image_logo3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginBottom="8dp"
                                android:padding="1dp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.358"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="calorie.json"
                                app:lottie_loop="true" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.38"
                                android:id="@id/txt2"
                                android:layout_gravity="bottom|center"
                                android:layout_marginBottom="12dp"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>






                        </androidx.cardview.widget.CardView>



                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:text="@string/txtTezlik"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_margin="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:cardCornerRadius="22dp"
                            app:cardElevation="4dp"
                            app:cardMaxElevation="14dp"
                            app:cardPreventCornerOverlap="true">


                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_gravity="center"
                                android:id="@+id/image_logo4"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginBottom="8dp"
                                android:padding="1dp"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.358"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="speed.json"
                                app:lottie_loop="true" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:id="@+id/txt3"
                                android:layout_gravity="bottom|center"
                                android:layout_marginBottom="12dp"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>






                        </androidx.cardview.widget.CardView>



                    </LinearLayout>




                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>