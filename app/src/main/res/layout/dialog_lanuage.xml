<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EADEFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">








    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp"
        android:id="@+id/linear1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/customshape"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/l1"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">



            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/imgUz"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/uzb"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtUz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/uz"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgRu"
                    app:layout_constraintStart_toEndOf="@id/imgUz"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.178" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:padding="4dp"
            android:id="@+id/l2"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/customshape"
            app:layout_constraintTop_toBottomOf="@id/l1"
            android:layout_width="match_parent"
            android:layout_height="60dp">



            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/imgRu"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/russia"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/txtRu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/ru"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/imgRu"
                    app:layout_constraintStart_toEndOf="@id/imgUz"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.178" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>